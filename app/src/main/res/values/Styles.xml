<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="ContainerButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize"> 28sp </item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin"> 2dp</item>
    </style>

    <style name="ButtonOperationGray" parent="ContainerButton">
        <item name="android:background">@color/gray</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="ButtonOperation" parent="ContainerButton">
        <item name="android:background">@color/orage</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:radius">30dp</item>
    </style>

    <style name="NumberButton" parent="ContainerButton">
        <item name="android:background">@drawable/btn_number_onclick_action</item>
        <item name="android:radius">15dp</item>
        <item name="android:textColor">@color/white</item>

    </style>

</resources>